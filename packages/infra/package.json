{
  "name": "infra",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "infra": "bin/sleep-smart-ac.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "destroy": "cdk destroy",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "lint": "biome lint ./bin ./lib ./test",
    "lint:fix": "biome lint --apply ./bin ./lib ./test",
    "format": "biome format --write ./bin ./lib ./test",
    "type-check": "tsc --noEmit",
    "deploy:dev": "cross-env CDK_ENV=dev cdk deploy",
    "deploy:prod": "cross-env CDK_ENV=prod cdk deploy",
    "synth:dev": "cross-env CDK_ENV=dev cdk synth",
    "synth:prod": "cross-env CDK_ENV=prod cdk synth"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1022.0",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.206.0",
    "constructs": "^10.0.0"
  }
}
