{
    "name": "sleep-smart-air-conditioner",
    "version": "0.1.0",
    "private": true,
    "description": "IoT×AI×クラウドを活用したスマートエアコン制御システム",
    "workspaces": [
      "packages/frontend",
      "packages/backend", 
      "packages/infra"
    ],
    "scripts": {
      "lint": "biome lint ./packages",
      "lint:fix": "biome lint --apply ./packages",
      "format": "biome format --write ./packages",
      "check": "biome check --apply ./packages",
      "type-check": "npm run type-check --workspaces",
      "test": "npm run test --workspaces",
      "build": "npm run build --workspaces",
      "clean": "npm run clean --workspaces && rm -rf node_modules",
      "dev:frontend": "npm run dev --workspace=packages/frontend",
      "dev:backend": "npm run dev --workspace=packages/backend",
      "deploy:infra": "npm run deploy --workspace=packages/infra",
      "cdk": "npm run cdk --workspace=packages/infra"
    },
    "devDependencies": {
      "@biomejs/biome": "^1.4.1",
      "typescript": "^5.3.0",
      "husky": "^8.0.3",
      "lint-staged": "^15.2.0"
    },
    "lint-staged": {
      "*.{js,ts,jsx,tsx}": [
        "biome check --apply"
      ],
      "*.{json,md}": [
        "biome format --write"
      ]
    },
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=9.0.0"
    }
  }